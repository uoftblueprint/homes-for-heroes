{
  "devDependencies": {
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "pm2": "^5.1.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "dev": "concurrently 'cd Frontend && PORT=3006 npm start' 'cd Backend && npm run dev'",
    "build": "cd Frontend && npm run build",
    "install:all": "npm i && cd Frontend && npm i && cd ../Backend && npm i",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc.json",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:start": "npm run pm2:delete && pm2 start ecosystem.config.js"
  }
}
